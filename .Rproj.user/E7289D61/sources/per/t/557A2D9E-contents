seedsreal = read.csv('/Users/elias/Downloads/seeds_real - Copy (2).csv', sep=",")
seedsdata = read.csv('/Users/elias/Downloads/seeds_dataset (1).csv', sep=",")
source("/Users/elias/Downloads/WK_R (1).R")

#cleaning data
seedsdata = na.omit(seedsdata) # deletion of missing data
seedsdata = scale(seedsdata) # standardize variables 

# Hierarchical Clustering - groups similar objects 
d <- dist(seedsdata, method = "euclidean") # distance matrix
# 
fitA <- hclust(d, method="average") #average distance
fitS <- hclust(d, method="single") #shortest distance  
fitC <- hclust(d, method="complete") #distance between the furthest points

# average - (BEST AND MOST APPROPRIATE METHOD)
plot(fitA, main="average denogram") 
HgroupsA <- cutree(fitA, k=5) # cut tree into 5 clusters
rect.hclust(fitA, k=5, border="red") 
plot(seedsdata, col=HgroupsA, main="average scatter") # average scatter

# single - this single clustering method is not so great as it is difficult to differentiate 
plot(fitS, main="single denogram") # display dendogram
HgroupsS <- cutree(fitS, k=5) # cut tree into 5 clusters
rect.hclust(fitS, k=5, border="red") 
plot(seedsdata, col=HgroupsS, main="single scatter")

# Complete - not so appropriate as it is extended
plot(fitC, main="Complete denogram") # display dendogram
HgroupsC <- cutree(fitC, k=5) # cut tree into 5 clusters
rect.hclust(fitC, k=5, border="red") 
plot(seedsdata, col=HgroupsC, main="complete scatter")



# K means clustering - (minimizing the mean distance between geometric points.)
fit1 <- kmeans(seedsdata, 5) # 5 cluster solution
aggregate(seedsdata,by=list(fit1$cluster),FUN=mean)
Kgroups1 = fit1$cluster
plot(seedsdata, col=Kgroups1, main="5 cluster solution")

fit2 <- kmeans(seedsdata, 3) # 3 cluster solution
aggregate(seedsdata,by=list(fit2$cluster),FUN=mean)
Kgroups2 = fit2$cluster 
plot(seedsdata, col=Kgroups2, main="3 cluster solution")

fit3 <- kmeans(seedsdata, 7) # 7 cluster solution
aggregate(seedsdata,by=list(fit3$cluster),FUN=mean)
Kgroups3 = fit3$cluster
plot(seedsdata, col=Kgroups3, main="7 cluster solution")

# weighted kappaaaa - comparing with real as they are consistant (compare how similar clustering arrangments are)
wk1 = WK_R(Kgroups1, seedsreal$Real)
wk2 = WK_R(Kgroups2, seedsreal$Real)
wk3 = WK_R(Kgroups3, seedsreal$Real)

wk4 = WK_R(HgroupsS, seedsreal$Real)
wk5 = WK_R(HgroupsA, seedsreal$Real)
wk6 = WK_R(HgroupsC, seedsreal$Real)

# weighted kappaaaa - PLOT WK
first <- c(wk1, wk2, wk3)
first = as.numeric(first)

second <- c(wk4, wk5, wk6)
second = as.numeric(second)

plot(first, main = "comparison between real and k-means", type ="o", col="red")
plot(second, main = "comparison between real and herraricheal", type ="o", col="blue")
